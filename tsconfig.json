{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "art": ["src/components/index.ts"],
      "@util": ["src/components/_util"]
    },
    "target": "esnext",
    "module": "commonjs",
    // react模式会生成React.createElement，在使用前不需要再进行转换操作了
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
